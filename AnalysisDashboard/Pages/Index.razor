                <p class="text3">или нажмите на кнупку</p>
                <input type="button" class="btn btn-choise" value="Выбрать файл">
                </div>  
                <InputFile type="file" name="img_logo" class="dropzone" accept=".xlsx" multiple="false" OnChange="@FileUploadOnChange"/> 
            </div> 
            <div class="line_or">
                <span>или</span>
            </div> 
            <input type="url" class="input _url" placeholder="Введите ссылку на файл"> 
            <div class="preview-zone hidden">
                <div class="box">
                <div class="box-body"></div>
                </div>
            </div>
            </div> 
            <div>
